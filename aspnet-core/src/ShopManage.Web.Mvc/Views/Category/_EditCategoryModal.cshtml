@using Abp.MultiTenancy
@using ShopManage.Shop.Product.Dtos
@using ShopManage.Web.Models.Common.Modals
@model CategoryListDto
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCategory")))
<div class="modal-body">
    <form name="CategoryEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group form-float">
            <div class="form-line">
                <input class="form-control" type="number" name="ParentId" required maxlength="100" value="@Model.ParentId">
                <label class="form-label">@L("ParentId")</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input class="form-control" type="text" name="Name" required maxlength="100" value="@Model.Name">
                <label class="form-label">@L("Name")</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="form-line">
                <input class="form-control" type="text" name="Path" required maxlength="100" value="@Model.Path">
                <label class="form-label">@L("Path")</label>
            </div>
        </div>
    </form>
</div>
@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
<script src="~/view-resources/Views/Category/_EditCategoryModal.js" asp-append-version="true"></script>
