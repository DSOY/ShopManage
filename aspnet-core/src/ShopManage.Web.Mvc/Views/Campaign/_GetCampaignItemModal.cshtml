@using Abp.MultiTenancy
@using ShopManage.Activity.CampaignService.Dtos
@using ShopManage.Web.Models.Common.Modals
@model CampaignListDto
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CampaignItem")))
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div id="CampaignItemGrid"></div>
        </div>
    </div>

    <button type="button" id="itemAdd" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" style="margin-top: -115px;">
        <i class="material-icons">add</i>
    </button>
    <form name="CampaignItemForm" role="form" novalidate class="form-validation">
        <div id="itemModel" class="modal-body" style="display:none;">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group form-float">
                <div class="form-line">
                    <input class="form-control" type="number" name="Price" placeholder="@L("Price")" required>
                </div>
            </div>
            <div class="form-group form-float">
                <div class="form-line">
                    <select class="form-control selectpicker" name="ProductId">
                        @foreach (var item in ViewBag.Product)
                        {
                            <option class="filter-option" value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </form>
    <div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@L("Cancel")</button>
    <button type="submit" id="saveItem" class="btn btn-primary waves-effect">@L("Save")</button>
</div>
</div>
<script src="~/view-resources/Views/Campaign/_EditCampaignModal.js" asp-append-version="true"></script>
